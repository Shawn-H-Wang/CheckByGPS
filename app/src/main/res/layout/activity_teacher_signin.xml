<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_img"
    tools:context=".teacher.TeacherSigninActivity">

    <LinearLayout
        android:id="@+id/layout1_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_henu"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/henu" />

        <TextView
            android:id="@+id/tv_henu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教师登陆界面"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1_imgs"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:background="@drawable/user" />

        <EditText
            android:id="@+id/edittext_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID:"
            android:inputType="number"
            android:maxLength="12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2_passwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2_id"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_passwd"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:background="@drawable/password" />

        <EditText
            android:id="@+id/edittext_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PASSWORD:"
            android:inputType="textPassword" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_issave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2_passwd"
        android:text="Remeber the password" />

    <LinearLayout
        android:id="@+id/layout3_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2_passwd"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Sign In"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_forgetpasswd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Forget Password"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>